<!DOCTYPE html>
<html lang="cs">
<head>
    {include "_layout/head.latte"}
    {include "_layout/head-scripts.latte"}
</head>
<body id="page-top">

    <div id="wrapper">

        {control menuComponent}

        <div id="content-wrapper" class="d-flex flex-column">

            <div id="content">

                {include '_layout/navbar.latte'}

                <div class="container-fluid">
                    <div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
                    {include #content}
                </div>
            </div>

            {include  '_layout/footer.latte'}

        </div>

    </div>

    {include '_layout/scroll.latte'}

    {include '_layout/logoutModal.latte'}

    {include '_layout/footer-scripts.latte'}
</body>
</html>